<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/incidentEnCoursItemView" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_marginLeft="5dip"
	android:layout_marginTop="3dip" android:orientation="horizontal" android:weightSum="1.0">
	<LinearLayout android:layout_width="0dip"
		android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="0.9">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<ImageView android:id="@+id/imgTypeLigne"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<ImageView android:id="@+id/imgNumLigne"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_toRightOf="@id/imgTypeLigne" />
			<ImageView android:id="@+id/imgVotePlus"
				android:layout_width="25dip" android:layout_marginLeft="2dip"
				android:layout_height="25dip" android:src="@drawable/ic_vote_plus" />
			<TextView android:id="@+id/txtNbVotePlus"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:padding="3dip" android:textColor="#000000" />
			<ImageView android:id="@+id/imgVoteMinus"
				android:layout_width="25dip" android:layout_height="25dip"
				android:src="@drawable/ic_vote_minus" />
			<TextView android:id="@+id/txtNbVoteMinus"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:padding="3dip" android:textColor="#000000" />
			<ImageView android:id="@+id/imgVoteEnded"
				android:layout_width="25dip" android:layout_height="25dip"
				android:src="@drawable/ic_vote_end" />
			<TextView android:id="@+id/txtNbVoteEnd"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:padding="3dip" android:textColor="#000000" />
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<TextView android:id="@+id/txtHeureIncident"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:paddingRight="3dip" android:textColor="#000000"
				android:textStyle="bold" />
			<TextView xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/txtIncidentItemViewRaison" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="#000000" android:layout_marginBottom="5dip" />
		</LinearLayout>
	</LinearLayout>
	<RelativeLayout android:layout_width="0dip"
		android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="0.1">
		<ImageButton android:id="@+id/btnPrecIncident"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/quickaction_arrow_up" android:background="@null"/>
		<TextView android:id="@+id/txtIndIncident" android:paddingLeft="2dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#000000" android:layout_centerVertical="true" android:textSize="7dip"/>
		<TextView android:id="@+id/txtNbSepIncident"
			android:layout_width="wrap_content" android:text="/"
			android:layout_height="wrap_content" android:textColor="#000000"
			android:layout_centerVertical="true" android:layout_toRightOf="@id/txtIndIncident" android:textSize="7dip" />
		<TextView android:id="@+id/txtNbTotalIncidents"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#000000" android:layout_centerVertical="true" 
			android:layout_toRightOf="@id/txtNbSepIncident" android:textSize="7dip" />
		<ImageButton android:id="@+id/btnNextIncident"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/quickaction_arrow_down"
			android:layout_alignParentBottom="true" android:layout_marginBottom="5dip"  android:background="@null" />
	</RelativeLayout>
</LinearLayout>